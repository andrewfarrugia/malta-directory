---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Breadcrumbs from "@/components/Breadcrumbs.astro";
import { buildSeo } from "@/lib/seo";

const breadcrumbs = [
  { name: "Home", url: "/" },
  { name: "Legal Notice", url: "/legal/" }
];

const seo = buildSeo({
  path: "/legal/",
  title: "Legal Notice",
  description: "Legal notice and company information for Malta Service Hub."
});
---
<BaseLayout seo={seo} breadcrumbs={breadcrumbs}>
  <main class="section">
    <div class="container prose">
      <Breadcrumbs items={breadcrumbs} />
      <h1>Legal Notice</h1>
      <p class="notice">Information may change over time. Please contact us directly for the latest legal details.</p>
      <h2>Company information</h2>
      <p>Company name: Malta Service Hub</p>
      <p>Registered address: Available on request.</p>
      <p>Registration number: Available on request.</p>
      <p>VAT number: Available on request.</p>
      <h2>Contact</h2>
      <p>Email: legal@maltaservicehub.com</p>
    </div>
  </main>
</BaseLayout>
